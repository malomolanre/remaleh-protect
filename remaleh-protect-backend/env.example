# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
HIBP_API_KEY=your-haveibeenpwned-api-key

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/remaleh_protect
# For local development, you can use:
# DATABASE_URL=sqlite:///remaleh_protect.db

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
OPENAI_API_KEY=your-openai-api-key
FLASK_ENV=production
FLASK_DEBUG=false

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_DEFAULT=60 per minute
RATE_LIMIT_STRATEGY=fixed-window

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance
CACHE_TTL=3600
THREAT_INTEL_CACHE_TTL=1800
USER_SCAN_CACHE_TTL=900

# SSL/HTTPS
FORCE_HTTPS=true
SSL_CERT_FILE=
SSL_KEY_FILE=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
